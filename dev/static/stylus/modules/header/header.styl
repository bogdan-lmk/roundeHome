.header
  display: flex;
  justify-content: center;
  padding: 20px 0
  position: relative;
  z-index: 99
  width: 100%
  &:before
    content: '';
    position: absolute;
    opacity: 0.8
    width: 100%
    height: 100%
    left: 0;
    top 0;
    background: #000000
    z-index: 0

nav
  display: flex;
  z-index: 99

.header-navigation
  width: 60%
  justify-content: space-between;
  align-items: center;


.header-nav-link
  position: relative;
  text-transform: capitalize;
  color: #8f9091
  transition: 0.3s ease-in-out
  font-family: 'OpenSans-Regular'
  &:after
    position: absolute;
    content: ''
    width: 100%
    display: flex;
    height: 2px
    left: 0
    bottom: -5px
    display: flex;
    background: linear-gradient(to right, rgba(178,142,103,0) 0%,rgba(180,143,103,0) 1%,rgba(255,205,98,1) 50%,rgba(178,142,103,0) 100%);
    visibility: hidden;
    opacity: 0
    transition: 0.3s ease-in-out
.header-nav-link
  &:hover
    color: #ffcd62
    transition: 0.3s  ease-in-out
  &:hover:after
    visibility: visible;
    opacity: 1
    transition: 0.3s ease-in-out

.logo
  z-index: 9999

.link-wrap
  z-index: 99999

.contact-link
  color: whiteColor

.contact-icon-hero
  width: 20px
  height: 20px
  margin-right: 10px
  stroke: whiteColor
