@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'
@import 'animate.css'
html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	font-family "OpenSans-Regular","OpenSans-SemiBold"
	height 100%

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color black
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative
	display: flex;
	flex-direction: column;
	width: 100%
	align-items: center;
input,
select,
button
	outline none
img
	max-width 100%

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	flex 1 0 auto

.container
	max-width: 1140px;
	width: 100%
	display: flex;

.jc-between
	justify-content: space-between;

.jc-center
	justify-content: center;
 .column
	 display: flex;
	 flex-direction: column;

.align-items-baseline
	align-items: baseline;
	
.row-reverse
	flex-direction: row-reverse;
